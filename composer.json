{
    "name": "itspire/common",
    "description": "Itspire Common Classes",
    "type": "library",
    "keywords": ["itspire"],
    "homepage": "http://www.itspire.fr",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Ryan RAJKOMAR",
            "email": "ryan.rajkomar@itspire.fr"
        }
    ],
    "require": {
        "php": ">=7.4",
        "symfony/validator": "~4.4",
        "doctrine/collections": "~1.6"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        }
    },
    "autoload": {
        "psr-4": {
            "Itspire\\Common\\": "src/main/php"
        }
    },
    "require-dev": {
        "pdepend/pdepend": "~2.7",
        "phploc/phploc": "~6.0",
        "sebastian/phpcpd": "~5.0",
        "squizlabs/php_codesniffer": "~3.5",
        "symfony/phpunit-bridge": "~5.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Itspire\\Common\\Tests\\": "src/test/php"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
